<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <android.support.design.widget.TextInputLayout
        style="@style/NewLinkTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_dnl_name"
            style="@style/NewLinkTIET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#efefef"
        android:padding="4dp"
        android:text="URL must be complete including 'http://' among others."
        android:textColor="#d50000" />

    <android.support.design.widget.TextInputLayout
        style="@style/NewLinkTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="URL">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_dnl_url"
            style="@style/NewLinkTIET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0000d5" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/NewLinkTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_dnl_desc"
            style="@style/NewLinkTIET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/NewLinkTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expiry Date (dd/mm/yyyy)">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_dnl_expiry_date"
            style="@style/NewLinkTIET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:textColor="#d50000" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>