<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_ms_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Mobile Computing"
            android:textColor="#333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_ms_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ms_name"
            android:text="8CS01A" />

        <TextView
            android:id="@+id/tv_ms_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_ms_name"
            android:text="M.M. 100" />

        <ProgressBar
            android:layout_alignStart="@id/tv_ms_code"
            android:layout_alignEnd="@id/tv_ms_code"
            android:id="@+id/pb_ms_ratings"
            android:indeterminate="false"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/tv_ms_code"
            android:max="100"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="40" />
    </RelativeLayout>
</android.support.v7.widget.CardView>