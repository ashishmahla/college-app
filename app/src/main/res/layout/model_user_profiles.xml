<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#efefef"
    android:layout_margin="3dp"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="#efefef"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="rectangle"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/iv_uvm_dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_uvm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Ashish Mahla"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_uvm_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_uvm_name"
                android:text="14ebkcs017"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_uvm_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="ashishmahla96@gmail.com"
                android:maxLines="1"
                android:textColor="#d50000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_uvm_mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_uvm_email"
                android:maxLength="10"
                android:text="8005834278"
                android:textColor="#0000d5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_uvm_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_uvm_mobile_no"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:text="Student"
                android:textColor="#999"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>