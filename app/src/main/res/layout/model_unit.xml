<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_mu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Mobile Computing"
            android:textColor="#333"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_mu_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mu_name"
            android:text="Unit 1" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_mu_topics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mu_number"
            android:text="Mobile Computing : An Introduction, Mobile Computing in daily life...." />

        <RatingBar
            android:id="@+id/rb_mu_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_mu_name"
            android:clickable="false"
            android:rating="5" />
    </RelativeLayout>
</android.support.v7.widget.CardView>