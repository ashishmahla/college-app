<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:padding="8dp"
            android:id="@+id/tv_mn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the notice title."
            android:textColor="@color/color_notice_title"
            android:textSize="16sp" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_mn_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/tv_mn_title"
            android:background="#ededed"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_mn_image"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/gradient_notice_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_mn_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:text="The BKBIET Photography club is open for all the students of college. Camera is not compulsory to join. It has different teams to work with. To join creative skulls you donâ€™t need to have camera; Only compulsion is to have a fully functional and extreme creative mind, but if you want to join the Photography and Videography team camera is compulsory and it should be in your bag 24-7 because in BKBIET you never know when something worth capturing happens !! "
                    android:textColor="@color/color_notice_desc"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>