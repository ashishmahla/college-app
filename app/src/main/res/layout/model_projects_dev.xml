<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#f8f8f8"
    app:cardCornerRadius="28dp"
    app:cardElevation="0.2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:innerRadius="0dp"
            android:shape="rectangle"
            android:thicknessRatio="1.9"
            app:cardBackgroundColor="#0fff"
            app:cardCornerRadius="25dp"
            app:cardElevation="0.1dp">

            <ImageView
                android:id="@+id/iv_mpd_dev_dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_mpd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="false"
                android:layout_marginEnd="90dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Ashish Mahla"
                android:textColor="#473537"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_mpd_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mpd_name"
                android:layout_centerHorizontal="false"
                android:text="14ebkcs017"
                android:textColor="#444"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_mpd_dev_call"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:tint="#448aff"
                app:srcCompat="@drawable/ic_call" />

            <ImageView
                android:id="@+id/iv_mpd_dev_mail"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="60dp"
                android:scaleType="centerCrop"
                android:tint="#ef5350"
                app:srcCompat="@drawable/ic_email" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>