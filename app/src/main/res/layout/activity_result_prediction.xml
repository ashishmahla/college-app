<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/screen_arl_entries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="Enter result (Percentage) of seven semesters in following fields." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="20dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_arp_sem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="2dp"
                    app:contentPadding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="I">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/arp_sem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:minWidth="100dp"
                            android:nextFocusDown="@id/arp_sem2" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v4.widget.Space
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_arp_sem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/cv_arp_sem1"
                    app:contentPadding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="II">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/arp_sem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:minWidth="100dp"
                            android:nextFocusDown="@id/arp_sem3" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="20dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_arp_sem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:contentPadding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="III"
                        android:inputType="numberDecimal"
                        android:maxLength="6">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/arp_sem3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:minWidth="100dp"
                            android:nextFocusDown="@id/arp_sem4" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v4.widget.Space
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_arp_sem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="2dp"
                    app:contentPadding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="IV">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/arp_sem4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:minWidth="100dp"
                            android:nextFocusDown="@id/arp_sem5" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="20dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_arp_sem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:contentPadding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="V"
                        android:inputType="numberDecimal"
                        android:maxLength="6">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/arp_sem5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:minWidth="100dp"
                            android:nextFocusDown="@id/arp_sem6" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v4.widget.Space
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_arp_sem6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:contentPadding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="VI">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/arp_sem6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:minWidth="100dp"
                            android:nextFocusDown="@id/arp_sem7" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="20dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_arp_sem7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:contentPadding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="VII"
                        android:inputType="numberDecimal"
                        android:maxLength="6">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/arp_sem7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:minWidth="100dp"
                            android:nextFocusDown="@id/b_arp_predict" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <Button
                android:id="@+id/b_arp_predict"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Predict Result"
                android:textColor="#d50000" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:background="#fefefe"
        android:id="@+id/screen_arl_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Result Prediction predicts the result of 8th sem based on statistical analysis of result of 7 semesters."
            android:textColor="#666"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:gravity="end"
            android:text="By Ashish Jindal"
            android:textColor="#666"
            android:textSize="16sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_arp_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ar_predictCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="-6 ฿"
                    android:textColor="#d50000"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/b_arp_payAndCont"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Pay and Continue"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_arp_currBal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/cv_arp_pay"
            android:layout_below="@id/cv_arp_pay"
            android:layout_marginTop="4dp"
            android:text="Balance : 27 ฿"
            android:textColor="#777"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_b_arp_getBerries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_arp_currBal"
            android:layout_alignEnd="@id/cv_arp_pay"
            android:layout_alignTop="@id/tv_arp_currBal"
            android:layout_below="@id/cv_arp_pay"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="Get More Berries"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/screen_arl_processing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Processing..."
                    android:textColor="@color/colorPrimaryDark" />

                <ProgressBar
                    android:id="@+id/pb_arp_processing"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:max="100"
                    android:progress="0" />

                <TextView
                    android:id="@+id/tv_arp_processing_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minLines="2"
                    android:text="Calculating probability of space time continuum disintegration" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/screen_arl_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Keep walking on the same path and you are destined to score :"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_arp_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 %"
                    android:shadowDx="2"
                    android:textColor="#d50000"
                    android:textSize="60sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/b_arl_close"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
</RelativeLayout>